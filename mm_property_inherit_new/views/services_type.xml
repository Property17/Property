<?xml version="1.0"?>
<odoo>
    <record id="services_type_form" model="ir.ui.view">
        <field name="name">services.type.form</field>
        <field name="model">services.type</field>
        <field name="arch" type="xml">
            <form string="Services Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="service_account_id" required="1" /> 
                         </group>
                        <group>
                            <field name="amount" required="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="services_type_tree" model="ir.ui.view">
        <field name="name">services.type.tree</field>
        <field name="model">services.type</field>
        <field name="arch" type="xml">
            <tree string="Services Type">
                <field name="name" />
                <field name="service_account_id" /> 
                <field name="amount" />
            </tree>
        </field>
    </record>

    <record id="action_services_type" model="ir.actions.act_window">
        <field name="name">Services Type</field>
        <field name="res_model">services.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Services Type"
        parent="property_management.menu_types_main"
        action="action_services_type"
        id="menu_services_type"
        sequence="5"
    />

</odoo>